.container {
  padding: 48rpx 32rpx;
}

.hero {
  margin-bottom: 64rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
}

.subtitle {
  display: block;
  margin-top: 16rpx;
  color: #666;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 36rpx rgba(17, 17, 17, 0.08);
}

.card-title {
  font-size: 32rpx;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.step {
  margin-bottom: 16rpx;
  color: #333;
}

.code {
  font-family: Menlo, Monaco, 'Courier New', monospace;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.notice {
  margin-top: 48rpx;
  color: #999;
  font-size: 24rpx;
}

.status {
  margin-top: 32rpx;
  color: #444;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.timestamp {
  color: #999;
  font-size: 24rpx;
}
