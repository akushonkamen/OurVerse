# ==========================================
# OurVerse Photo Sharing App - Configuration
# ==========================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ourverse

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_SALT_ROUNDS=10

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
# GITHUB_CALLBACK_URL: 生产环境使用，手动配置；开发环境自动生成
GITHUB_CALLBACK_URL=https://your-domain.com/api/auth/github/callback

# Domain & Protocol Configuration
DOMAIN=your-domain.com
PROTOCOL=https
FRONTEND_URL=https://your-domain.com

# 开发环境配置示例：
# DOMAIN=localhost
# PROTOCOL=http
# FRONTEND_URL=http://localhost:8444
# GITHUB_CALLBACK_URL=http://localhost:8444/api/auth/github/callback

# Server Configuration
PORT=8444
NODE_ENV=development
API_BASE_URL=http://localhost:8444

# Amap (高德地图) API Configuration
AMAP_WEB_API_KEY=your_amap_web_api_key_here
AMAP_REST_API_KEY=your_amap_rest_api_key_here
AMAP_SECURITY_CODE=your_amap_security_code_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOADS_DIR=uploads

# Business Logic Parameters
DAILY_UPLOAD_LIMIT=3
MAX_DISTANCE_VERIFICATION=50
LOCATION_VERIFICATION_RADIUS=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_COOKIE_MAX_AGE=86400000
SESSION_SECRET=your-session-secret-key

# Health Check
HEALTH_CHECK_PORT=3000

# CORS Configuration
CORS_ORIGIN=*

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker Configuration
DOCKER_APP_PORT=3000
DOCKER_NGINX_HTTP_PORT=80
DOCKER_NGINX_HTTPS_PORT=443

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
