# Core server configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=3000
APP_PORT=3000

# MongoDB credentials and connection string used by docker-compose
MONGO_USERNAME=ourverse
MONGO_PASSWORD=ourverse
MONGO_PORT=27017
MONGO_INITDB_DATABASE=ourverse
MONGODB_URI=mongodb://ourverse:ourverse@mongodb:27017/ourverse?authSource=admin

# Application secrets
JWT_SECRET=change-me
SESSION_SECRET=

# API behaviour
ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000
UPLOADS_DIR=uploads
DAILY_UPLOAD_LIMIT=5
MAX_DISTANCE_VERIFICATION=50
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=10

# Third-party integrations (fill in when available)
AMAP_WEB_API_KEY=
AMAP_REST_API_KEY=
AMAP_SECURITY_CODE=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=
GITHUB_TOKEN=
PROTOCOL=https
DOMAIN=localhost
